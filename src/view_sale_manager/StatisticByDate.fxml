<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="480.0" prefWidth="1074.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller_sale_manager.StatisticByDateController">
   <center>
      <TableView fx:id="dateTable" prefHeight="102.0" prefWidth="1044.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="billId" prefWidth="75.0" text="Bill ID" />
            <TableColumn fx:id="userId" prefWidth="75.0" text="User ID" />
            <TableColumn fx:id="transactionDate" prefWidth="75.0" text="Transaction Date" />
            <TableColumn fx:id="paymentName" prefWidth="75.0" text="Payment Name" />
            <TableColumn fx:id="productId" prefWidth="75.0" text="Product ID" />
            <TableColumn fx:id="mfgDate" prefWidth="75.0" text="Mfg Date" />
            <TableColumn fx:id="expDate" prefWidth="75.0" text="Exp Date" />
            <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantity" />
            <TableColumn fx:id="price" prefWidth="75.0" text="Price" />
            <TableColumn fx:id="total" prefWidth="75.0" text="Total" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="30.0" text="Start:" />
                  <DatePicker fx:id="startDatePicker" prefHeight="30.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </DatePicker>
                  <Label prefHeight="30.0" text="End:">
                     <HBox.margin>
                        <Insets left="20.0" right="15.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="endDatePicker" prefHeight="30.0" />
                  <HBox fx:id="search" alignment="CENTER" onMouseReleased="#searchBillByDate">
                     <children>
                        <HBox fx:id="search" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" stylesheets="@../css/app.css">
                           <children>
                              <Label alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefHeight="24.0" prefWidth="24.0" text="Label">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../img/edit-find-symbolic.symbolic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                              <Label fx:id="find" prefHeight="30.0" styleClass="app-button" stylesheets="@../css/app.css" text="Find">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                           <styleClass>
                              <String fx:value="app-border" />
                              <String fx:value="app-controls" />
                           </styleClass>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </HBox>
            <VBox>
               <children>
                  <Label prefHeight="30.0" text="Revenue:" />
                  <Label prefHeight="30.0" text="Number of orders:" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="revenue" prefHeight="30.0" text="0" />
                  <Label fx:id="numberBills" prefHeight="30.0" text="0" />
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
   </padding>
   <bottom>
      <LineChart prefHeight="256.0" prefWidth="1044.0" BorderPane.alignment="CENTER">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
   </bottom>
</BorderPane>
