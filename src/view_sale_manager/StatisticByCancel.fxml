<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller_sale_manager.StatisticByCancelController">
   <center>
      <TableView fx:id="cancelTable" prefHeight="400.0" prefWidth="811.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="userID" prefWidth="75.0" text="UserID" />
            <TableColumn fx:id="billId" prefWidth="75.0" text="BillID" />
            <TableColumn fx:id="total" prefWidth="75.0" text="Total" />
            <TableColumn fx:id="transactionDate" prefWidth="75.0" text="TransactionDate" />
            <TableColumn fx:id="paymentName" prefWidth="75.0" text="PaymentName" />
            <TableColumn fx:id="statusCancel" prefWidth="75.0" text="StatusCancel" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="30.0" text="Date:" />
                  <DatePicker fx:id="datefind" prefHeight="30.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </DatePicker>
                  <HBox alignment="CENTER">
                     <children>
                        <HBox fx:id="search" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" onMouseReleased="#getFind" stylesheets="@../css/app.css">
                           <children>
                              <Label alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefHeight="24.0" prefWidth="24.0" text="Label">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../img/edit-find-symbolic.symbolic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                              <Label fx:id="find" prefHeight="30.0" styleClass="app-button" stylesheets="@../css/app.css" text="Find">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                           <styleClass>
                              <String fx:value="app-border" />
                              <String fx:value="app-controls" />
                           </styleClass>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </HBox>
            <VBox>
               <children>
                  <Label prefHeight="30.0" text="Number of orders:" />
                  <Label prefHeight="30.0" text="Total order amount:" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="numberBills" prefHeight="30.0" text="0" />
                  <Label fx:id="totalCancel" prefHeight="30.0" text="0" />
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
