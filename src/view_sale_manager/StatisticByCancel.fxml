<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller_sale_manager.StatisticByCancelController">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="30.0" prefWidth="95.0" text="Start Date">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Label>
                  <DatePicker fx:id="txtStartDate" onAction="#startDateAction" prefHeight="31.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </DatePicker>
                  <HBox alignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </HBox>
                  <Label prefHeight="30.0" prefWidth="84.0" text="End Date">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Label>
                  <DatePicker fx:id="txtEndDate" onAction="#endDateAction" prefHeight="31.0" prefWidth="150.0" />
               </children>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </HBox>
            <Button fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#getSearch" prefHeight="31.0" prefWidth="94.0" text="Search">
               <HBox.margin>
                  <Insets right="15.0" top="15.0" />
               </HBox.margin>
            </Button>
            <VBox>
               <children>
                  <Label prefHeight="30.0" text="Number of orders:" />
                  <Label prefHeight="30.0" text="Total order amount:" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="numberBills" prefHeight="30.0" prefWidth="96.0" text="0" />
                  <Label fx:id="totalCancel" prefHeight="30.0" text="0" />
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="45.0" />
         </padding>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <HBox prefHeight="420.0" prefWidth="935.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="cancelTable" prefHeight="420.0" prefWidth="1018.0">
               <columns>
                  <TableColumn fx:id="userID" prefWidth="75.0" text="UserID" />
                  <TableColumn fx:id="billId" prefWidth="75.0" text="Bill ID" />
                  <TableColumn fx:id="productId" prefWidth="75.0" text="Product ID" />
                  <TableColumn fx:id="price" prefWidth="76.0" text="Price" />
                  <TableColumn fx:id="quantity" prefWidth="81.0" text="Quantity" />
                  <TableColumn fx:id="total" prefWidth="61.0" text="Total" />
                  <TableColumn fx:id="transactionDate" prefWidth="150.0" text="TransactionDate" />
                  <TableColumn fx:id="paymentName" prefWidth="75.0" text="PaymentName" />
                  <TableColumn fx:id="statusCancel" prefWidth="75.0" text="StatusCancel" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <HBox.margin>
                  <Insets left="45.0" />
               </HBox.margin>
            </TableView>
         </children>
      </HBox>
   </center>
   <right>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="420.0" prefWidth="500.0">
               <children>
                  <PieChart fx:id="cancelPieChart" prefHeight="209.0" prefWidth="257.0" />
                  <Label text="Total order quantity.">
                     <VBox.margin>
                        <Insets left="15.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtOrderQuantity">
                     <VBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Total number of canceled orders.">
                     <VBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtOrderCanceled">
                     <VBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Total number of successful orders.">
                     <VBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtxOrderSuccessful">
                     <VBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
         </children>
      </HBox>
   </right>
</BorderPane>
