<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller_admin.ChangePasswordController">
   <center>
      <HBox alignment="CENTER" maxHeight="-Infinity" BorderPane.alignment="CENTER">
         <children>
            <VBox prefWidth="300.0">
               <children>
                  <Label prefHeight="30.0" text="Current Password:" />
                  <PasswordField prefHeight="30.0" promptText="Current password" />
                  <Label prefHeight="30.0" text="Position:" />
                  <PasswordField prefHeight="30.0" promptText="New password" />
                  <Label prefHeight="30.0" text="Email:" />
                  <PasswordField prefHeight="30.0" promptText="Retype new password" />
                  <HBox alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" stylesheets="@../css/app.css">
                           <children>
                              <Label alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefHeight="24.0" prefWidth="24.0" text="Label">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../img/document-edit-symbolic.symbolic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                              <Label prefHeight="30.0" styleClass="app-button" stylesheets="@../css/app.css" text="Update Profile">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                           <styleClass>
                              <String fx:value="app-border" />
                              <String fx:value="app-controls" />
                           </styleClass>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
